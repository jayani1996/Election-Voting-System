<%- include('partials/header') -%>

        <main class="h-full pb-16 overflow-y-auto">
          <!-- Remove everything INSIDE this div to a really blank page -->
          <div class="container px-6 mx-auto grid">
            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
              Dashboard
            </h2>

            <div class="grid mb-8 md:grid-cols-2">
              <div class="row inputData">
                <div class="col-6 form-group">
                    <label for="recipient-name" class="text-sm col-form-label">Election Type</label>
                    <select class="select2drpdwn form-select form-control form-control-sm" id="etype">
                      <option value="11" disabled="disabled" selected>Please Select</option>
                      <option value="provincial">Provincial</option>
                      <option value="presidential">Presidential</option>
                      </select>
                </div>
                <div class="col-6 form-group">
                    <label for="recipient-name" class="text-sm col-form-label">Election</label>
                    <select class="select2drpdwn form-select form-control form-control-sm" id="ename">
                      </select>
                    <span class="pnumberError ErrorClass text-xs text-red-600"></span>
                </div>
              </div>
            </div>

            <!-- Cards -->
            <div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
              <div class="flex items-center p-4 bg-white rounded-md shadow-md shadow-[#d5d5d5]">
                <div class="p-3 mr-4 text-orange-500 bg-orange-100 rounded-full dark:text-orange-100 dark:bg-orange-500">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <p
                    class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400" >
                    Total Votes
                  </p>
                  <p
                    class="text-lg font-semibold text-gray-700 dark:text-gray-200" id="tv">
                    0
                  </p>
                </div>
              </div>

              <div class="flex items-center p-4 bg-white rounded-md shadow-md shadow-[#d5d5d5]">
                <div class="p-3 mr-4 text-green-500 bg-green-100 rounded-full dark:text-green-100 dark:bg-green-500">
                    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M14 2a3.963 3.963 0 0 0-1.4.267 6.439 6.439 0 0 1-1.331 6.638A4 4 0 1 0 14 2Zm1 9h-1.264A6.957 6.957 0 0 1 15 15v2a2.97 2.97 0 0 1-.184 1H19a1 1 0 0 0 1-1v-1a5.006 5.006 0 0 0-5-5ZM6.5 9a4.5 4.5 0 1 0 0-9 4.5 4.5 0 0 0 0 9ZM8 10H5a5.006 5.006 0 0 0-5 5v2a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-2a5.006 5.006 0 0 0-5-5Z"/>
                    </svg>

                  </svg>
                </div>
                <div>
                  <p
                    class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400">
                    Total Voters
                  </p>
                  <p
                    class="text-lg font-semibold text-gray-700 dark:text-gray-200" id="tvr">
                    0
                  </p>
                </div>
              </div>

              <div class="flex items-center p-4 bg-white rounded-md shadow-md shadow-[#d5d5d5]">
                <div class="p-3 mr-4 text-red-500 bg-red-100 rounded-full dark:text-red-100 dark:bg-red-500">
                  <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                  </svg>
                </div>
                <div>
                  <p class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400">
                    Total Rejected
                  </p>
                  <p class="text-lg font-semibold text-gray-700 dark:text-gray-200" id="tr">
                    0
                  </p>
                </div>
              </div>

              <div class="flex items-center p-4 bg-white rounded-md shadow-md shadow-[#d5d5d5]">
                <div class="p-3 mr-4 text-red-500 bg-red-100 rounded-full dark:text-red-100 dark:bg-red-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m9 14.25 6-6m4.5-3.493V21.75l-3.75-1.5-3.75 1.5-3.75-1.5-3.75 1.5V4.757c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0c1.1.128 1.907 1.077 1.907 2.185ZM9.75 9h.008v.008H9.75V9Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm4.125 4.5h.008v.008h-.008V13.5Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                  </svg>
                </div>
                <div>
                  <p class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400">
                    Vote Percentage
                  </p>
                  <p class="text-lg font-semibold text-gray-700 dark:text-gray-200" id="percentageVal">
                    0
                  </p>
                </div>
              </div>

            </div>

            <!-- New Table -->
            <div class="w-full rounded-lg p-8 rounded-md shadow-lg shadow-[#d5d5d5]">
              <h4 class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300" >
              Candidate List
            </h4>
              <div class="w-full overflow-x-auto">
                <table id="myTable" class="display">
                  <thead>
                    <tr>
                      <th>Candidate</th>
                      <th>Province</th>
                      <th>Party</th>
                      <th>Votes</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>



            <!-- Charts -->
            <!-- heading -->
            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200" >
              Charts
            </h2>
            <div class="grid gap-6 mb-8 md:grid-cols-2">
              <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800" >
                <h4 class="mb-4 font-semibold text-gray-800 dark:text-gray-300">
                  Votes by Parties
                </h4>
                <canvas id="pie"></canvas>
              </div>

              <!-- bar chart -->
              <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800" >
                <h4 class="mb-4 font-semibold text-gray-800 dark:text-gray-300">
                  Votes by Candidate
                </h4>
                <canvas id="bars"></canvas>
              </div>
            </div>

        <% if(userObj.type != "admin") { %>
          <div class="row">
            <div class="col justify-items-center items-center place-content-center">
              <h2 class="justify-items-center"><b class="mx-3">Election Centers</b></h2>
              <div class="overflow-auto p-3 bg-light" style="max-width: 400px; max-height: 200px;">
                <ul class="list-group centerList">
                  <li class="list-group-item">An item</li>
                </ul>
              </div>
            </div>
            
            <div class="col">
              <h2><b class="mx-3">Election Parties</b></h2>
              <div class="overflow-auto p-3 bg-light" style="max-width: 400px; max-height: 200px;">
                <ul class="list-group partyList">
                  <li class="list-group-item">An item</li>
                </ul>
              </div>
            </div>
          </div>
        <% } %>
          
        </div>

        </main>

<%- include('partials/footer') -%>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script type="text/javascript" src="/javascripts/preloader/jquery.preloader.js"></script>
<script type="text/javascript" src="/javascripts/preloader/preloader.js"></script>
<script src="/javascripts/reports.js" ></script>
</html>